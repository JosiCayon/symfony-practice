{% extends 'base.html.twig' %}

{% block header %}
    {{ parent() }} {# Sin esto, el contenido del padre ser√≠a 'machacado' #}
    {{ include('partial/header.html.twig') }}
{% endblock %}

{% block body %}
    <table>
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Edad</th>
                <th>Localidad</th>
                <th>Acciones</th>          
            </tr>
        </thead>
        <tbody>
            {% for person in people %}
            <tr>
                <td>{{person.name}}</td>
                <td>{{person.email}}</td>
                <td>{{person.age}}</td>
                <td>{{person.city}}</td>
                <td>
                    <ul>
                        <li><a href="{{ path('default_show', { id: loop.index0}) }}">Ver en formato HTTP</a>
                        <li><a href="{{ path('default_show_json', {id: loop.index0, _format: 'json'}) }}">Ver en formato JSON</a>
                    </ul>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block stylesheets%}
    <style>
        body {
            background-color: teal;
            color: whitesmoke;
        }
    </style>
{% endblock %}
